{
  "name": "github_issues",
  "displayName": "GitHub Issues",
  "description": "View your current issues in the explorer view.",
  "version": "0.0.1",
  "publisher": "chrmarti",
  "engines": {
    "vscode": "^1.13.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:githubIssues"
  ],
  "main": "./out/src/extension",
  "icon": "images/icon.png",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "githubIssues",
          "name": "GitHub Issues"
        }
      ]
    },
    "commands": [
      {
        "command": "githubIssues.refresh",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "githubIssues.openIssue",
        "title": "Open Issue"
      },
      {
        "command": "githubIssues.openPullRequest",
        "title": "Open Pull Request"
      },
      {
        "command": "githubIssues.checkoutPullRequest",
        "title": "Checkout Pull Request"
      },
      {
        "command": "githubIssues.copyNumber",
        "title": "Copy Number"
      },
      {
        "command": "githubIssues.copyText",
        "title": "Copy Text"
      },
      {
        "command": "githubIssues.copyMarkdown",
        "title": "Copy Markdown"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "githubIssues.refresh",
          "when": "view == githubIssues",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "githubIssues.openIssue",
          "when": "view == githubIssues && viewItem == issue",
          "group": "1_navigation"
        },
        {
          "command": "githubIssues.copyNumber",
          "when": "view == githubIssues && viewItem == issue",
          "group": "9_cutcopypaste"
        },
        {
          "command": "githubIssues.copyText",
          "when": "view == githubIssues && viewItem == issue",
          "group": "9_cutcopypaste"
        },
        {
          "command": "githubIssues.copyMarkdown",
          "when": "view == githubIssues && viewItem == issue",
          "group": "9_cutcopypaste"
        },
        {
          "command": "githubIssues.openPullRequest",
          "when": "view == githubIssues && viewItem == pull_request",
          "group": "1_navigation"
        },
        {
          "command": "githubIssues.checkoutPullRequest",
          "when": "view == githubIssues && viewItem == pull_request",
          "group": "1_navigation"
        },
        {
          "command": "githubIssues.copyNumber",
          "when": "view == githubIssues && viewItem == pull_request",
          "group": "9_cutcopypaste"
        },
        {
          "command": "githubIssues.copyText",
          "when": "view == githubIssues && viewItem == pull_request",
          "group": "9_cutcopypaste"
        },
        {
          "command": "githubIssues.copyMarkdown",
          "when": "view == githubIssues && viewItem == pull_request",
          "group": "9_cutcopypaste"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/copy-paste": "^1.1.30",
    "@types/github": "^7.1.0",
    "@types/node": "*",
    "typescript": "^2.1.4",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "copy-paste": "^1.3.0",
    "git-credential-node": "^1.1.0",
    "github": "^9.2.0"
  }
}